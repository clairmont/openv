<h1>Listing Ballots</h1>
 
<table>
  <tr>
    <th>Issue</th>
    <th>Options</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @ballots.each do |ballot| %>
  <tr>
    <td><%= ballot.issue %></td>
    <td><%= ballot.options %></td>
    <td><%= link_to "Show", ballot %></td>
    <td><%= link_to "Edit", edit_ballot_path(ballot) %></td>
    <td><%= link_to "Remove", ballot, method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>
 
<br>
 
<%= link_to "New ballot", new_ballot_path %>
